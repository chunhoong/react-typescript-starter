{
  "compilerOptions": {
    "sourceMap": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES6",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "baseUrl": "./src",
    "paths": {
      "@component/*": ["component/*"]
    }
  },
  "include": ["src"]
}